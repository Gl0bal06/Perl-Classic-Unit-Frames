<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="Perl_CombatDisplay_Options.lua"/>


	<!-- Virtual templates -->
	<CheckButton name="Perl_CombatDisplay_Options_CheckButton" virtual="true">
		<Size>
			<AbsDimension x="32" y="32"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormalSmall" text="">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
		<PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
		<HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
		<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
		<DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
		<Scripts>
			<OnClick>
				Perl_CombatDisplay_Options_BoxChecked();
			</OnClick>
			<OnShow>
				Perl_CombatDisplay_Options_OnShow();
			</OnShow>
		</Scripts>
	</CheckButton>

	<CheckButton name="Perl_CombatDisplay_Options_TabsTemplate" virtual="true">
		<Size>
			<AbsDimension x="100" y="24"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormalSmall" text="">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-12"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1"/>
				</FontString>
			</Layer>
		</Layers>
		<NormalTexture file="Interface\ChatFrame\ChatFrameTab" />
		<HighlightTexture file="Interface\ChatFrame\ChatFrameTabHighlight" />
		<CheckedTexture file="Interface\ChatFrame\ChatFrameTab" />
		<Scripts>
			<OnClick>
				Perl_CombatDisplay_Options_TabChecked();
			</OnClick>
		</Scripts>
	</CheckButton>
	
	<Button name="Perl_CombatDisplay_Options_LabelTemplate" virtual="true">
		<Size>
			<AbsDimension x="64" y="16"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormalSmall" text="">
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Button>
	
	<Frame name="Perl_CombatDisplay_Options_PanelTemplate" virtual="true">
		<Size>
			<AbsDimension x="400" y="500"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset>
					<AbsDimension x="20" y="-80"/>
				</Offset>
			</Anchor>
		</Anchors>
	</Frame>


	<!-- Actual Options Frame -->
	<Frame name="Perl_CombatDisplay_Options_Frame" movable="true" frameStrata="DIALOG" hidden="true">
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Size>
			<AbsDimension x="400" y="500"/>
		</Size>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="10" right="10" top="10" bottom="10"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="Perl_CombatDisplay_Options_Header" file="Interface\DialogFrame\UI-DialogBox-Header">
					<Size>
						<AbsDimension x="256" y="64"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="12"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString inherits="GameFontNormal" text="Perl Options">
					<Anchors>
						<Anchor point="TOP" relativeTo="Perl_CombatDisplay_Options_Header">
							<Offset>
								<AbsDimension x="0" y="-14"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="Perl_CombatDisplay_Options_CDPanel" inherits="Perl_CombatDisplay_Options_PanelTemplate">
				<Frames>
					<Button name="Perl_CombatDisplay_Options_StateLabel">
						<Size>
							<AbsDimension x="64" y="16"/>
						</Size>
						<Anchors>
							<Anchor point="TOPLEFT"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<FontString name="$parentText" inherits="GameFontNormalSmall" text="CombatDisplay will show..">
									<Anchors>
										<Anchor point="TOPLEFT"/>
									</Anchors>
								</FontString>
							</Layer>
						</Layers>
					</Button>
					<Checkbutton name="Perl_CombatDisplay_Options_CheckOption1" inherits="Perl_CombatDisplay_Options_CheckButton" id="1"> 
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="Perl_CombatDisplay_Options_StateLabel">
								<Offset>
									<AbsDimension x="30" y="-5"/>
								</Offset>
							</Anchor>
						</Anchors>
					</Checkbutton>
					<Checkbutton name="Perl_CombatDisplay_Options_CheckOption2" inherits="Perl_CombatDisplay_Options_CheckButton" id="2"> 
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="Perl_CombatDisplay_Options_CheckOption1">
								<Offset>
									<AbsDimension x="0" y="-5"/>
								</Offset>
							</Anchor>
						</Anchors>
					</Checkbutton>
					<Checkbutton name="Perl_CombatDisplay_Options_CheckOption3" inherits="Perl_CombatDisplay_Options_CheckButton" id="3"> 
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="Perl_CombatDisplay_Options_CheckOption2">
								<Offset>
									<AbsDimension x="0" y="-5"/>
								</Offset>
							</Anchor>
						</Anchors>
					</Checkbutton>
					<Checkbutton name="Perl_CombatDisplay_Options_CheckOption4" inherits="Perl_CombatDisplay_Options_CheckButton" id="4"> 
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="Perl_CombatDisplay_Options_CheckOption3">
								<Offset>
									<AbsDimension x="-30" y="-10"/>
								</Offset>
							</Anchor>
						</Anchors>
					</Checkbutton>
					<Checkbutton name="Perl_CombatDisplay_Options_CheckOption5" inherits="Perl_CombatDisplay_Options_CheckButton" id="5"> 
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="Perl_CombatDisplay_Options_CheckOption4">
								<Offset>
									<AbsDimension x="0" y="-10"/>
								</Offset>
							</Anchor>
						</Anchors>
					</Checkbutton>
					<Checkbutton name="Perl_CombatDisplay_Options_CheckOption6" inherits="Perl_CombatDisplay_Options_CheckButton" id="6"> 
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="Perl_CombatDisplay_Options_CheckOption5">
								<Offset>
									<AbsDimension x="0" y="-10"/>
								</Offset>
							</Anchor>
						</Anchors>
					</Checkbutton>
				</Frames>
			</Frame>
			<Frame name="Perl_CombatDisplay_Options_PTPanel" inherits="Perl_CombatDisplay_Options_PanelTemplate">
			</Frame>
			<Button name="Perl_CombatDisplay_Options_OptionsClose" inherits="GameMenuButtonTemplate" text="Close">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-20" y="20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						Perl_CombatDisplay_Options_Toggle();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				Perl_CombatDisplay_Options_OnLoad();
			</OnLoad>
			<OnEvent>
				Perl_CombatDisplay_Options_OnEvent(event);
			</OnEvent>
		</Scripts>
	</Frame>
</Ui>